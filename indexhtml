<body>
  <div id="container">
    <h1>Calculadora de Integrales</h1>
    <input type="text" id="funcion" placeholder="Ejemplo: x^2" />
    <button onclick="resolverIntegral()">Resolver Integral</button>
    <div id="resultado"></div>
  </div>

  <script>
    async function resolverIntegral() {
      const funcion = document.getElementById('funcion').value;
      if (!funcion) {
        document.getElementById('resultado').innerText = "Por favor, escribe una función.";
        return;
      }
      try {
        const res = await fetch(`https://api.mathjs.org/v4/?expr=integrate(${encodeURIComponent(funcion)}, x)`);
        const integral = await res.text();
        document.getElementById('resultado').innerText = `∫ ${funcion} dx = ${integral} + C`;
      } catch (error) {
        document.getElementById('resultado').innerText = "Error al calcular la integral.";
      }
    }
  </script>
</body>
</html>
